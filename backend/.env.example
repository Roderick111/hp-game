# HP Investigation Game - Backend Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Configuration (Phase 1: Internal)
# =============================================================================

# Provider selection: anthropic | openrouter | openai | google
DEFAULT_LLM_PROVIDER=openrouter

# API Keys (set the key for your chosen provider)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=

# Model selection (use aliases, not dated versions like claude-3-5-sonnet-20241022)
# OpenRouter format: openrouter/{provider}/{model}
# Direct Anthropic: claude-sonnet-4, claude-haiku-4-5
# Direct OpenAI: gpt-4o, gpt-4o-mini
# Direct Google: gemini-2.0-flash
DEFAULT_MODEL=openrouter/anthropic/claude-sonnet-4

# OpenRouter metadata (optional, for analytics dashboard)
OR_SITE_URL=https://github.com/yourusername/hp-investigation-game
OR_APP_NAME=HP Investigation Game

# Fallback configuration (when primary model fails)
ENABLE_FALLBACK=true
FALLBACK_MODEL=openrouter/google/gemini-2.0-flash-001

# =============================================================================
# Legacy Configuration (kept for backward compatibility)
# =============================================================================
# If using direct Anthropic (DEFAULT_LLM_PROVIDER=anthropic), set this:
# ANTHROPIC_API_KEY=sk-ant-your-key-here
